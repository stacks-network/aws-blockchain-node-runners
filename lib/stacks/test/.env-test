#############################################################
# Example configuration for Stacks nodes runner app on AWS  #
#############################################################

## Set the AWS account is and region for your environment ##
AWS_ACCOUNT_ID="1234567890"
AWS_REGION="us-east-2"

## Common configuration parameters ##
STACKS_CLUSTER="mainnet-beta"                 # All options:  "mainnet-beta", "testnet", "devnet"
STACKS_NODE_CONFIGURATION="baserpc"                   # All options:   "consensus", "baserpc", "extendedrpc"
STACKS_VERSION="1.16.26"                       # Current required version of Stacks

STACKS_INSTANCE_TYPE="r6a.8xlarge"
STACKS_CPU_TYPE="x86_64"                      # All options: "x86_64", "ARM_64". IMPORTANT: Make sure the CPU type matches the instance type used
# Data volume configuration
STACKS_DATA_VOL_TYPE="gp3"                    # Other options: "io1" | "io2" | "gp3" | "instance-store" . IMPORTANT: Use "instance-store" option only with instance types that support that feature, like popular for node im4gn, d3, i3en, and i4i instance families
STACKS_DATA_VOL_SIZE="2000"                   # Current required data size to keep both smapshot archive and unarchived version of it
STACKS_DATA_VOL_IOPS="12000"                  # Max IOPS for EBS volumes (not applicable for "instance-store")
STACKS_DATA_VOL_THROUGHPUT="700"              # Max throughput for EBS gp3 volumes (not applicable for "io1" | "io2" | "instance-store")
# Accounts volume configuration
STACKS_ACCOUNTS_VOL_TYPE="gp3"                # Other options: "io1" | "io2" | "gp3" | "instance-store" . IMPORTANT: Use "instance-store" option only with instance types that support that feature, like popular for node im4gn, d3, i3en, and i4i instance families
STACKS_ACCOUNTS_VOL_SIZE="500"                # Current required data size to keep both smapshot archive and unarchived version of it
STACKS_ACCOUNTS_VOL_IOPS="6000"               # Max IOPS for EBS volumes (not applicable for "instance-store")
STACKS_ACCOUNTS_VOL_THROUGHPUT="700"          # Max throughput for EBS gp3 volumes (not applicable for "io1" | "io2" | "instance-store")
# Secrets configuration
STACKS_NODE_IDENTITY_SECRET_ARN="none"                            # Optional. The ARN of the secret in AWS Secrets Manager with the node identity key pair. In case you want to provision a node but keep the old identity.
STACKS_VOTE_ACCOUNT_SECRET_ARN="none"                             # Optional for consensus node type. ARN of the secret in AWS Secrets Manager with the Vote Account's key pair.
STACKS_AUTHORIZED_WITHDRAWER_ACCOUNT_SECRET_ARN="none"            # Optional for consensus node type. The ARN of the secret in AWS Secrets Manager with the Authorized Withdrawer Account's key pair.
STACKS_REGISTRATION_TRANSACTION_FUNDING_ACCOUNT_SECRET_ARN="none" # Required for consensus node type. The ARN of the secret in AWS Secrets Manager with Registration Transaction Funding Account's key pair. Needs to have sufficient SOL to pay for on-chain validator creation

## HA nodes configuration ##
STACKS_HA_NUMBER_OF_NODES="2"                     # Total number of RPC nodes to be provisioned. Default: 2
STACKS_HA_ALB_HEALTHCHECK_GRACE_PERIOD_MIN="60"   # Time enough to initialize the instance
STACKS_HA_NODES_HEARTBEAT_DELAY_MIN="10"          # Time sufficient enough for a node do sync
